@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Contestor.BlazorServer.Pages.Account.LoginModel

<h2>Вход в приложение</h2>

<form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.Input.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Input.UserName"></label><br />
        <input asp-for="Input.UserName" />
        <span asp-validation-for="Input.UserName"></span>
    </div>
    <div>
        <label asp-for="Input.Password"></label><br />
        <input asp-for="Input.Password" type="password"/>
        <span asp-validation-for="Input.Password"></span>
    </div>
    <div>
        <input type="submit" value="Войти" class="btn btn-primary" />
    </div>
</form>